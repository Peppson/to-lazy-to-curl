<Application
    x:Class="to_lazy_to_curl.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:system="http://schemas.microsoft.com/winfx/2009/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <!--  Themes  -->
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Settings/Colors.Light.xaml" />
                <ResourceDictionary Source="Settings/Sizes.xaml" />
                <ResourceDictionary Source="Settings/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  PlaceholderText helper  -->
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
