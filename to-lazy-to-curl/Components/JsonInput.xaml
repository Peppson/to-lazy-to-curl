<UserControl
    x:Class="to_lazy_to_curl.Components.JsonInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:to_lazy_to_curl.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="0,16,0,6"
            VerticalAlignment="Center"
            FontSize="{StaticResource FontSizeH1}"
            FontWeight="Bold"
            Foreground="{DynamicResource PrimaryText}"
            Text="Body" />

        <Grid
            x:Name="SingleViewButtonPanel"
            Grid.Row="1"
            Height="30"
            HorizontalAlignment="Stretch"
            Panel.ZIndex="1"
            SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="90" />
                <ColumnDefinition Width="*" MinWidth="90" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="RequestButton"
                Grid.Column="0"
                HorizontalAlignment="Stretch"
                Click="RequestButton_Click"
                Cursor="Hand"
                FontSize="{StaticResource FontSizeTabs}"
                FontWeight="Bold">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="14"
                        Height="14"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryText}"
                        Icon="Upload" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeTabs}"
                        Text="Payload" />
                </StackPanel>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outerBorder"
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6,6,0,0">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="outerBorder" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerBorder" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=JsonTextBox}" Value="True">
                                <Setter TargetName="outerBorder" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=JsonTextBox}" Value="True">
                                <Setter TargetName="outerBorder" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsResponseEditor, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False">
                                <Setter TargetName="contentPresenter" Property="Margin" Value="0,0,0,1" />
                                <Setter Property="Margin" Value="0,0,0,-1" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                x:Name="ResponseButton"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                Click="ResponseButton_Click"
                Cursor="Hand"
                FontSize="{StaticResource FontSizeTabs}"
                FontWeight="Bold">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="14"
                        Height="14"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryText}"
                        Icon="Download" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeTabs}"
                        Text="Response" />
                </StackPanel>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outerBorder2"
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6, 6, 0, 0">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="outerBorder2" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerBorder2" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=ResponseEditor}" Value="True">
                                <Setter TargetName="outerBorder2" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=ResponseEditor}" Value="True">
                                <Setter TargetName="outerBorder2" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsResponseEditor, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                                <Setter TargetName="contentPresenter" Property="Margin" Value="0,0,0,1" />
                                <Setter Property="Margin" Value="0,0,0,-1" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Grid
            x:Name="SplitViewButtonPanel"
            Grid.Row="1"
            Height="30"
            HorizontalAlignment="Stretch"
            Panel.ZIndex="1"
            SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="RequestButton2"
                Grid.Column="0"
                Width="164"
                Margin="0,0,0,-1"
                HorizontalAlignment="Left"
                Focusable="False"
                FontSize="{StaticResource FontSizeTabs}"
                FontWeight="Bold">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="14"
                        Height="14"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryText}"
                        Icon="Upload" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeTabs}"
                        Text="Payload" />
                </StackPanel>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outerBorder3"
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6, 6, 0, 0">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="0,0,0,1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="outerBorder3" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerBorder3" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=JsonEditorsBorder}" Value="True">
                                <Setter TargetName="outerBorder3" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=JsonEditorsBorder}" Value="True">
                                <Setter TargetName="outerBorder3" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=ResponseButton2}" Value="True">
                                <Setter TargetName="outerBorder3" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                x:Name="ResponseButton2"
                Grid.Column="0"
                Width="164"
                HorizontalAlignment="Left"
                Cursor="SizeWE"
                Focusable="False"
                FontSize="{StaticResource FontSizeTabs}"
                FontWeight="Bold"
                PreviewMouseLeftButtonDown="ResponseButton2_PreviewMouseLeftButtonDown"
                PreviewMouseLeftButtonUp="ResponseButton2_PreviewMouseLeftButtonUp"
                PreviewMouseMove="ResponseButton2_PreviewMouseMove">

                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="14"
                        Height="14"
                        Margin="0,0,6,0"
                        VerticalAlignment="Center"
                        Foreground="{DynamicResource PrimaryText}"
                        Icon="Download" />
                    <TextBlock
                        VerticalAlignment="Center"
                        FontSize="{StaticResource FontSizeTabs}"
                        Text="Response" />
                </StackPanel>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outerBorder4"
                            Background="{DynamicResource InputBackground}"
                            BorderBrush="{DynamicResource Border}"
                            BorderThickness="1,1,1,0"
                            CornerRadius="6, 6, 0, 0">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    x:Name="contentPresenter"
                                    Margin="0,0,0,1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger SourceName="outerBorder4" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outerBorder4" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="outerBorder4" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=JsonEditorsBorder}" Value="True">
                                <Setter TargetName="outerBorder4" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsKeyboardFocusWithin, ElementName=JsonEditorsBorder}" Value="True">
                                <Setter TargetName="outerBorder4" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsMouseOver, ElementName=RequestButton2}" Value="True">
                                <Setter TargetName="outerBorder4" Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Border
            x:Name="JsonEditorsBorder"
            Grid.Row="2"
            Background="{DynamicResource InputBackground}"
            BorderThickness="1"
            CornerRadius="0,6,6,6">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="{DynamicResource Border}" />
                    <Style.Triggers>

                        <!--  Let's hardcode some more triggers...  -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </Trigger>

                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=RequestButton2}" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding IsMouseOver, ElementName=ResponseButton2}" Value="True">
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </DataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsMouseOver, ElementName=RequestButton}" Value="True" />
                                <Condition Binding="{Binding IsResponseEditor, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </MultiDataTrigger>

                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding IsMouseOver, ElementName=ResponseButton}" Value="True" />
                                <Condition Binding="{Binding IsResponseEditor, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                        </MultiDataTrigger>

                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid x:Name="JsonEditorGrid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <avalonEdit:TextEditor
                    Name="JsonTextBox"
                    Grid.Column="0"
                    Background="Transparent"
                    FontSize="{StaticResource FontSizeJsonEditor}"
                    Foreground="{DynamicResource EditorCaretColor}"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="false"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="{Binding PayloadEditorSyntax, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    VerticalScrollBarVisibility="Auto"
                    WordWrap="True" />

                <GridSplitter
                    x:Name="Splitter"
                    Grid.Column="1"
                    Width="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="{DynamicResource Border}"
                    DragIncrement="1"
                    Focusable="False"
                    ResizeBehavior="PreviousAndNext"
                    ResizeDirection="Columns"
                    ShowsPreview="False"
                    SnapsToDevicePixels="True" />

                <avalonEdit:TextEditor
                    Name="ResponseEditor"
                    Grid.Column="2"
                    Background="Transparent"
                    FontSize="{StaticResource FontSizeJsonEditor}"
                    Foreground="{DynamicResource EditorCaretColor}"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="false"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="{Binding ResponseEditorSyntax, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    VerticalScrollBarVisibility="Auto"
                    WordWrap="True" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
