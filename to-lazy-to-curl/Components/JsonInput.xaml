<UserControl
    x:Class="to_lazy_to_curl.Components.JsonInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:to_lazy_to_curl.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>





        <Grid x:Name="SingleView" SnapsToDevicePixels="True">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>



                <!--  Buttons  -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Payload  -->

                    <Button
                        Grid.Column="0"
                        Margin="0,0,0,-1"
                        Click="PayloadButton_Click"
                        Cursor="Hand"
                        FontSize="{StaticResource FontSizeTabs}"
                        FontWeight="Bold">

                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome
                                Width="14"
                                Height="14"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryText}"
                                Icon="Upload" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSizeTabs}"
                                Text="Payload" />
                        </StackPanel>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="outerBorder"
                                    Background="{DynamicResource EditorsBackground}"
                                    BorderBrush="{DynamicResource EditorBorder}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="6,6,0,0">
                                    <Grid x:Name="innerArea" Background="Transparent">
                                        <ContentPresenter
                                            x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"
                                            TextElement.Foreground="{TemplateBinding Foreground}" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>


                <!--  Response  -->

                <Button
                    Grid.Column="1"
                    Margin="0,0,0,-1"
                    Click="ResponseButton_Click"
                    Cursor="SizeWE"
                    FontSize="{StaticResource FontSizeTabs}"
                    FontWeight="Bold">

                    <StackPanel Orientation="Horizontal">
                        <fa:ImageAwesome
                            Width="14"
                            Height="14"
                            Margin="0,0,6,0"
                            VerticalAlignment="Center"
                            Foreground="{DynamicResource PrimaryText}"
                            Icon="Download" />
                        <TextBlock
                            VerticalAlignment="Center"
                            FontSize="{StaticResource FontSizeTabs}"
                            Text="Response" />
                    </StackPanel>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outerBorder"
                                Background="{DynamicResource EditorsBackground}"
                                BorderBrush="{DynamicResource EditorBorder}"
                                BorderThickness="1,1,1,0"
                                CornerRadius="6,6,0,0">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <ContentPresenter
                                        x:Name="contentPresenter"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>




                <Grid Grid.Row="1" Background="Gray" />

            </Grid>
        </Grid>











        <Grid x:Name="SplitView" SnapsToDevicePixels="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="160" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" MinWidth="177" />
                <ColumnDefinition Width="0" />
                <ColumnDefinition Width="*" MinWidth="177" />
            </Grid.ColumnDefinitions>

            <!--  Payload Container  -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Button  -->
                <Grid
                    Grid.Row="0"
                    Margin="0,0,0,-1"
                    Panel.ZIndex="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        FontSize="{StaticResource FontSizeTabs}"
                        FontWeight="Bold">

                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome
                                Width="14"
                                Height="14"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryText}"
                                Icon="Upload" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSizeTabs}"
                                Text="Payload" />
                        </StackPanel>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="outerBorder"
                                    Background="{DynamicResource EditorsBackground}"
                                    BorderBrush="{DynamicResource EditorBorder}"
                                    BorderThickness="0,1,1,0"
                                    CornerRadius="6,6,0,0">
                                    <Grid x:Name="innerArea" Background="Transparent">
                                        <ContentPresenter
                                            x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"
                                            TextElement.Foreground="{TemplateBinding Foreground}" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Grid Grid.Column="1" Background="Transparent" />
                </Grid>

                <!--  Editor  -->
                <Border
                    Grid.Row="1"
                    Panel.ZIndex="0"
                    Background="{DynamicResource EditorsBackground}"
                    CornerRadius="0,0,0,6">
                    <avalonEdit:TextEditor
                        Name="JsonTextBox"
                        Background="Transparent"
                        BorderBrush="{DynamicResource EditorBorder}"
                        BorderThickness="0,1,0,0"
                        FontSize="{StaticResource FontSizeJsonEditor}"
                        Foreground="{DynamicResource EditorCaretColor}"
                        ShowLineNumbers="True"
                        SyntaxHighlighting="{Binding PayloadEditorSyntax, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        VerticalScrollBarVisibility="Visible"
                        WordWrap="True" />
                </Border>
            </Grid>

            <GridSplitter
                x:Name="Splitter1"
                Grid.Column="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DragIncrement="1"
                Focusable="False"
                ResizeDirection="Columns"
                ShowsPreview="False"
                SnapsToDevicePixels="True" />

            <!--  Response Container  -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Button  -->
                <Grid
                    Grid.Row="0"
                    Margin="17,0,0,-1"
                    Panel.ZIndex="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Cursor="SizeWE"
                        FontSize="{StaticResource FontSizeTabs}"
                        FontWeight="Bold"
                        PreviewMouseLeftButtonDown="SplitResponseButton_PreviewMouseLeftButtonDown">

                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome
                                Width="14"
                                Height="14"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryText}"
                                Icon="Download" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSizeTabs}"
                                Text="Response" />
                        </StackPanel>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="outerBorder"
                                    Background="{DynamicResource EditorsBackground}"
                                    BorderBrush="{DynamicResource EditorBorder}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0">
                                    <Grid x:Name="innerArea" Background="Transparent">
                                        <ContentPresenter
                                            x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"
                                            TextElement.Foreground="{TemplateBinding Foreground}" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Grid Grid.Column="1" Background="Transparent" />
                </Grid>

                <!--  Editor  -->
                <Border
                    Grid.Row="1"
                    Panel.ZIndex="0"
                    Background="{DynamicResource EditorsBackground}">

                    <avalonEdit:TextEditor
                        Name="ResponseEditor"
                        Background="Transparent"
                        BorderBrush="{DynamicResource EditorBorder}"
                        BorderThickness="0,1,0,0"
                        FontSize="{StaticResource FontSizeJsonEditor}"
                        Foreground="{DynamicResource EditorCaretColor}"
                        ShowLineNumbers="True"
                        SyntaxHighlighting="{Binding ResponseEditorSyntax, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        VerticalScrollBarVisibility="Visible"
                        WordWrap="True" />
                </Border>
            </Grid>

            <GridSplitter
                x:Name="Splitter2"
                Grid.Column="3"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                DragIncrement="1"
                Focusable="False"
                ResizeDirection="Columns"
                ShowsPreview="False"
                SnapsToDevicePixels="True" />

            <!--  Header Container  -->
            <Grid Grid.Column="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="30" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--  Button  -->
                <Grid
                    Grid.Row="0"
                    Margin="17,0,0,-1"
                    Panel.ZIndex="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="160" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Button
                        Grid.Column="0"
                        Cursor="SizeWE"
                        FontSize="{StaticResource FontSizeTabs}"
                        FontWeight="Bold"
                        PreviewMouseLeftButtonDown="SplitHeaderButton_PreviewMouseLeftButtonDown">

                        <StackPanel Orientation="Horizontal">
                            <fa:ImageAwesome
                                Width="14"
                                Height="14"
                                Margin="0,0,6,0"
                                VerticalAlignment="Center"
                                Foreground="{DynamicResource PrimaryText}"
                                Icon="FileTextOutline" />
                            <TextBlock
                                VerticalAlignment="Center"
                                FontSize="{StaticResource FontSizeTabs}"
                                Text="Header" />
                        </StackPanel>

                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="outerBorder"
                                    Background="{DynamicResource EditorsBackground}"
                                    BorderBrush="{DynamicResource EditorBorder}"
                                    BorderThickness="1,1,1,0"
                                    CornerRadius="6,6,0,0">
                                    <Grid x:Name="innerArea" Background="Transparent">
                                        <ContentPresenter
                                            x:Name="contentPresenter"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            RecognizesAccessKey="True"
                                            TextElement.Foreground="{TemplateBinding Foreground}" />
                                    </Grid>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Grid Grid.Column="1" Background="Transparent" />
                </Grid>

                <!--  Editor  -->
                <Border
                    x:Name="HeaderEditorContainer"
                    Grid.Row="1"
                    Background="{DynamicResource EditorsBackground}"
                    BorderBrush="{DynamicResource EditorBorder}"
                    BorderThickness="0,1,1,0"
                    CornerRadius="0,0,6,0">

                    <avalonEdit:TextEditor
                        Name="HeaderEditor"
                        Background="Transparent"
                        FontSize="{StaticResource FontSizeJsonEditor}"
                        Foreground="{DynamicResource EditorCaretColor}"
                        ShowLineNumbers="True"
                        SyntaxHighlighting="Json"
                        VerticalScrollBarVisibility="Visible"
                        WordWrap="True" />
                </Border>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
