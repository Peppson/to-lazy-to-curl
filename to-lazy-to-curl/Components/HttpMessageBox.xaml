<UserControl
    x:Class="to_lazy_to_curl.Components.HttpMessageBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:to_lazy_to_curl.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Margin="0,14,0,-10"
        HorizontalAlignment="Center"
        Orientation="Horizontal">

        <fa:ImageAwesome
            x:Name="MessageTextBlockSpinner"
            Width="16"
            Height="16"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Foreground="{DynamicResource PrimaryText}"
            Icon="Spinner"
            Spin="True"
            SpinDuration="2"
            Visibility="Collapsed" />

        <fa:ImageAwesome
            x:Name="MessageTextBlockSuccess"
            Width="14"
            Height="14"
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Foreground="{DynamicResource Success}"
            Icon="Check"
            Visibility="Collapsed" />

        <fa:ImageAwesome
            x:Name="MessageTextBlockFailure"
            Width="14"
            Height="14"
            Margin="0,-1,5,0"
            VerticalAlignment="Center"
            Foreground="{DynamicResource Failure}"
            Icon="Warning"
            Visibility="Collapsed" />

        <TextBlock
            x:Name="MessageTextBlock"
            HorizontalAlignment="Center"
            FontSize="14"
            Text=""
            TextAlignment="Center" />
    </StackPanel>
</UserControl>
