<UserControl
    x:Class="to_lazy_to_curl.Components.UrlInput"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:to_lazy_to_curl.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel Orientation="Vertical">
        <TextBlock
            Margin="0,5,0,6"
            VerticalAlignment="Center"
            FontSize="{StaticResource FontSizeH1}"
            FontWeight="Bold"
            Foreground="{StaticResource PrimaryText}"
            Text="URL" />

        <Border
            x:Name="UrlBorder"
            VerticalAlignment="Center"
            Background="{StaticResource InputBackground}"
            BorderThickness="1"
            CornerRadius="4">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="BorderBrush" Value="{StaticResource Border}" />
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderHover}" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocusWithin" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource BorderHover}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid Margin="10,0,0,0">
                <StackPanel
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <fa:ImageAwesome
                        Width="14"
                        Height="14"
                        Margin="0,1,6,0"
                        VerticalAlignment="Center"
                        Icon="Globe">

                        <fa:ImageAwesome.Style>
                            <Style TargetType="fa:ImageAwesome">
                                <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text.IsEmpty, ElementName=UrlTextBox}" Value="True">
                                        <Setter Property="Foreground" Value="{StaticResource PlaceHolderText}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </fa:ImageAwesome.Style>
                    </fa:ImageAwesome>
                </StackPanel>

                <TextBox
                    x:Name="UrlTextBox"
                    Height="32"
                    Padding="21,0"
                    VerticalContentAlignment="Center"
                    FontSize="{StaticResource FontSizeUrlInput}"
                    Foreground="{StaticResource PrimaryText}"
                    Style="{StaticResource NoHoverFocusTextBoxStyle}"
                    TextWrapping="NoWrap" />

                <TextBlock
                    Padding="23,0"
                    VerticalAlignment="Center"
                    FontSize="{StaticResource FontSizeUrlInput}"
                    Foreground="{StaticResource PlaceHolderText}"
                    IsHitTestVisible="False"
                    Text="Enter a URL..."
                    Visibility="{Binding Text.IsEmpty, ElementName=UrlTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
            </Grid>
        </Border>
    </StackPanel>
</UserControl>
