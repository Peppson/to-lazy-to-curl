<UserControl
    x:Class="to_lazy_to_curl.Components.PopupMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:to_lazy_to_curl.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:to_lazy_to_curl.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:services="clr-namespace:to_lazy_to_curl.Services"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ModernToggleSwitchStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Width="44" Height="21">
                            <!--  Track  -->
                            <Border
                                x:Name="SwitchTrack"
                                Width="44"
                                Height="21"
                                Background="{DynamicResource BorderHover}"
                                CornerRadius="10" />

                            <!--  Thumb  -->
                            <Ellipse
                                x:Name="SwitchThumb"
                                Width="17"
                                Height="17"
                                Margin="2"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Fill="{DynamicResource ThemeToggle}"
                                StrokeThickness="1" />
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource PatchButton}" />
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Right" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter TargetName="SwitchTrack" Property="Background" Value="{DynamicResource TitleBarButtonHover}" />
                                <Setter TargetName="SwitchThumb" Property="HorizontalAlignment" Value="Left" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Popup
        x:Name="PopupMenuWindow"
        AllowsTransparency="True"
        HorizontalOffset="-160"
        Placement="Bottom"
        PopupAnimation="Fade"
        StaysOpen="False" 
        VerticalOffset="-4">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="10" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Polygon
                x:Name="PopupPolygon"
                Grid.Row="0"
                Margin="0,1,26,0"
                HorizontalAlignment="Right"
                Fill="{DynamicResource ButtonTabsBackground}"
                Points="0,10 10,0 20,10"
                Stroke="{Binding BorderBrush, ElementName=PopupBox}"
                StrokeThickness="1" />

            <Border
                x:Name="PopupBox"
                Grid.Row="1"
                Width="220"
                Background="{DynamicResource ButtonTabsBackground}"
                BorderThickness="1"
                CornerRadius="6">
                <Border.Style>
                    <Style TargetType="Border">
                        <Setter Property="BorderBrush" Value="{DynamicResource PopupBorder}" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{DynamicResource BorderHover}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Border.Style>
                <Grid>
                    <StackPanel>

                        <!--  Settings  -->
                        <StackPanel>
                            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                                <StackPanel
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Orientation="Horizontal">
                                    <fa:ImageAwesome
                                        Width="16"
                                        Height="16"
                                        Margin="0,0,6,0"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource Icons}"
                                        Icon="Cog" />
                                    <TextBlock
                                        Margin="0,10,0,10"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        FontSize="{StaticResource FontSizeJsonEditor}"
                                        FontWeight="Bold"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Text="Settings" />
                                </StackPanel>

                                <Button
                                    Width="32"
                                    Height="32"
                                    Margin="178,0,0,0"
                                    Background="Transparent"
                                    BorderThickness="0"
                                    Click="Close_Click"
                                    Cursor="Hand">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border x:Name="border" Background="{TemplateBinding Background}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource TitleBarButtonHover}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                    <Path
                                        Width="46"
                                        Height="32"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Data="M 18,11 27,20 M 18,20 27,11"
                                        Stroke="{DynamicResource PrimaryText}"
                                        StrokeThickness="1" />
                                </Button>
                            </Grid>
                            <Rectangle
                                Height="1"
                                HorizontalAlignment="Stretch"
                                Fill="{DynamicResource Border}" />
                        </StackPanel>

                        <!--  Content  -->
                        <Grid Margin="28,0,0,0" Panel.ZIndex="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="12" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="10" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="14" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="14" />
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="1" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource FontSizeJsonEditor}"
                                    Foreground="{DynamicResource PrimaryText}"
                                    Text="Dark Mode" />
                                <Border
                                    Margin="48,0,0,0"
                                    VerticalAlignment="Center"
                                    BorderBrush="{DynamicResource Border}"
                                    BorderThickness="1"
                                    CornerRadius="10">
                                    <CheckBox
                                        x:Name="ThemeToggleCheckBox"
                                        Checked="CheckBox_Checked"
                                        Cursor="Hand"
                                        Style="{StaticResource ModernToggleSwitchStyle}"
                                        Unchecked="CheckBox_Unchecked" />
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Row="3" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource FontSizeJsonEditor}"
                                    Foreground="{DynamicResource PrimaryText}"
                                    Text="Logs" />
                                <Button
                                    Width="49"
                                    Height="23"
                                    Margin="85,0,0,0"
                                    Click="OpenLogs_Click"
                                    Cursor="Hand"
                                    FontSize="{StaticResource FontSizeTabs}">
                                    <TextBlock
                                        Margin="0,0,0,2"
                                        VerticalAlignment="Center"
                                        FontSize="{StaticResource FontSizeJsonEditor}"
                                        Text="Open" />
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                x:Name="border"
                                                Background="{DynamicResource TitleBarButtonHover}"
                                                BorderBrush="{DynamicResource BorderHover}"
                                                BorderThickness="1"
                                                CornerRadius="4">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="border" Property="BorderBrush" Value="{DynamicResource ScrollbarForeground}" />
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter TargetName="border" Property="Background" Value="{DynamicResource ScrollbarForeground}" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </StackPanel>

                            <StackPanel Grid.Row="5" Orientation="Horizontal">
                                <TextBlock
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource FontSizeJsonEditor}"
                                    Foreground="{DynamicResource PrimaryText}"
                                    Text="Version" />
                                <TextBlock
                                    Margin="67,0,0,0"
                                    VerticalAlignment="Center"
                                    FontSize="{StaticResource FontSizeJsonEditor}"
                                    Foreground="{DynamicResource PrimaryText}"
                                    Text="{Binding Source={x:Static config:Config.AppVersionNumber}}" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Popup>
</UserControl>
