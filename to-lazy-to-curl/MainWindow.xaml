<Window
    x:Class="to_lazy_to_curl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Lazy to Curl"
    Width="620"
    Height="670"
    MinWidth="400"
    MinHeight="480"
    MaxWidth="1400"
    FontFamily="Consolas"
    Icon="pack://application:,,,/Assets/test2.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="NoHoverFocusTextBoxStyle" TargetType="TextBox">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>




    <Grid Margin="24,10,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  URL  -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="URL" />

            <TextBox
                x:Name="UrlTextBox"
                Height="34"
                Margin="0,0,0,10"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#e5e9f0"
                FontSize="15"
                Style="{StaticResource NoHoverFocusTextBoxStyle}"
                TextAlignment="Center"
                TextChanged="TextBox_TextChanged"
                TextWrapping="NoWrap" />
        </StackPanel>

        <!--  JSON  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel
                Grid.Row="1"
                Margin="0,4,0,5"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    x:Name="RequestButton"
                    Width="80"
                    Content="Request" />
                <Button
                    x:Name="ResponseButton"
                    Width="80"
                    Content="Response" />
            </StackPanel>

            <TextBlock
                Grid.Row="0"
                Margin="0,4,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Body" />

            <avalonEdit:TextEditor
                Name="JsonTextBox"
                Grid.Row="2"
                Background="Transparent"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="false"
                ShowLineNumbers="True"
                SyntaxHighlighting="Json"
                VerticalScrollBarVisibility="Visible" />
        </Grid>



        <!--  Message  -->
        <TextBlock
            x:Name="MessageTextBlock"
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontSize="14"
            FontWeight="Bold"
            Text=""
            TextAlignment="Center" />


        <!--  Buttons  -->
        <StackPanel Grid.Row="3" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Actions" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Get"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Width="6"
                                        HorizontalAlignment="Left"
                                        Background="#60affe" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="1"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Post"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Width="6"
                                        HorizontalAlignment="Left"
                                        Background="#49cc90" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#49cc90" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#49cc90" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="2"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Patch"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Width="6"
                                        HorizontalAlignment="Left"
                                        Background="#50e3c1" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#50e3c1" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#50e3c1" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="3"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Put"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Width="6"
                                        HorizontalAlignment="Left"
                                        Background="#fca131" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#fca131" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#fca131" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="4"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Delete"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Width="6"
                                        HorizontalAlignment="Left"
                                        Background="#f93f3e" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#f93f3e" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#f93f3e" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Send  -->
            <Button
                x:Name="SubmitButton"
                Grid.Column="0"
                Height="42"
                Click="SubmitButton_Click"
                Content="Send"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="#4c566a"
                            BorderBrush="Black"
                            BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b4252" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--  Clear  -->
            <Button
                x:Name="ClearButton"
                Grid.Column="2"
                Height="42"
                Click="ClearButton_Click"
                Content="Clear"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>

                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="#4c566a"
                            BorderBrush="Black"
                            BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b4252" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>





        <!--  Background="#FFDDDDDD"  -->






    </Grid>
</Window>
