<Window
    x:Class="to_lazy_to_curl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Lazy to Curl"
    Width="620"
    Height="670"
    MinWidth="400"
    MinHeight="480"
    MaxWidth="1400"
    Background="#fdfdfd"
    FontFamily="Consolas"
    Icon="pack://application:,,,/Assets/test2.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="NoHoverFocusTextBoxStyle" TargetType="TextBox">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="#333333" />
            <Setter Property="Background" Value="#fefefe" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>




    <Grid Margin="24,10,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  URL Form  -->
        <StackPanel Grid.Row="0" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#333333"
                Text="URL" />

            <Border
                VerticalAlignment="Center"
                BorderBrush="#d4d4d4"
                BorderThickness="1"
                CornerRadius="4">

                <Grid>
                    <TextBox
                        x:Name="UrlTextBox"
                        Height="32"
                        Padding="4,0"
                        VerticalContentAlignment="Center"
                        Background="#ffffff"
                        FontSize="15"
                        Foreground="#333333"
                        Style="{StaticResource NoHoverFocusTextBoxStyle}"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="NoWrap" />

                    <TextBlock
                        Padding="6,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="#999999"
                        IsHitTestVisible="False"
                        Text="Enter a URL..."
                        Visibility="{Binding Text.IsEmpty, ElementName=UrlTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>
            </Border>
        </StackPanel>


        <!--  JSON  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <!--<RowDefinition Height="Auto" />-->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <StackPanel
                Margin="0,4,0,6"
                HorizontalAlignment="Left"
                Orientation="Horizontal">
                <Button
                    x:Name="RequestButton"
                    Width="80"
                    Content="Request" />
                <Button
                    x:Name="ResponseButton"
                    Width="80"
                    Content="Response" />
            </StackPanel>



            <TextBlock
                Grid.Row="0"
                Margin="0,14,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#333333"
                Text="Body" />

            <Border
                Grid.Row="2"
                BorderBrush="#d4d4d4"
                BorderThickness="1"
                CornerRadius="4">

                <avalonEdit:TextEditor
                    Name="JsonTextBox"
                    Background="#ffffff"
                    FontFamily="Consolas"
                    FontSize="14"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="false"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="Json"
                    VerticalScrollBarVisibility="Visible" />
            </Border>
        </Grid>



        <!--  Status Message  -->
        <TextBlock
            x:Name="MessageTextBlock"
            Grid.Row="2"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontSize="14"
            FontWeight="Bold"
            Text=""
            TextAlignment="Center" />


        <!--  Action Buttons  -->
        <StackPanel Grid.Row="3" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="#333333"
                Text="Actions" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Get"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                BorderBrush="#d4d4d4"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="#60affe"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="1"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Post"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                BorderBrush="#d4d4d4"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="#87e37d"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#87e37d" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#87e37d" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="2"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Patch"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                BorderBrush="#d4d4d4"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="#50e3c1"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#50e3c1" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#50e3c1" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="3"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Put"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                BorderBrush="#d4d4d4"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="#fca131"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#fca131" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#fca131" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="4"
                    Height="32"
                    Content="Delete"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                BorderBrush="#d4d4d4"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid>
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="#ff5d5c"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#ff5d5c" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="#ff5d5c" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>

        <Grid Grid.Row="4" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  Send  -->
            <Button
                x:Name="SubmitButton"
                Grid.Column="0"
                Height="42"
                Click="SubmitButton_Click"
                Content="Send"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outer"
                            BorderBrush="#d4d4d4"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="#60affe" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--  Clear  -->
            <Button
                x:Name="ClearButton"
                Grid.Column="2"
                Height="42"
                Click="ClearButton_Click"
                Content="Clear"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outer"
                            BorderBrush="#d4d4d4"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid>
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="#ff5d5c" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="#ff5d5c" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="#999999" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
