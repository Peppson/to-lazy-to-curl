<Window
    x:Class="to_lazy_to_curl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:components="clr-namespace:to_lazy_to_curl.Components"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Lazy to Curl"
    Width="620"
    Height="670"
    MinWidth="400"
    MinHeight="480"
    MaxWidth="1400"
    Background="{StaticResource WindowBackground}"
    FontFamily="Consolas"
    Icon="pack://application:,,,/Assets/AppIcon.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="NoHoverFocusTextBoxStyle" TargetType="TextBox">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />
            <Setter Property="Background" Value="Yellow" />
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />
    </Window.Resources>

    <Grid Margin="24,10,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  URL Form  -->
        <components:UrlInput />
        <!--
        <StackPanel Grid.Row="0" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryText}"
                Text="URL" />

            <Border
                VerticalAlignment="Center"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="4">

                <Grid>
                    <TextBox
                        x:Name="UrlTextBox"
                        Height="32"
                        Padding="4,0"
                        VerticalContentAlignment="Center"
                        Background="{StaticResource InputBackground}"
                        FontSize="15"
                        Foreground="{StaticResource PrimaryText}"
                        Style="{StaticResource NoHoverFocusTextBoxStyle}"
                        TextChanged="TextBox_TextChanged"
                        TextWrapping="NoWrap" />

                    <TextBlock
                        Padding="6,0"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="{StaticResource PlaceHolderText}"
                        IsHitTestVisible="False"
                        Text="Enter a URL..."
                        Visibility="{Binding Text.IsEmpty, ElementName=UrlTextBox, Converter={StaticResource BoolToVisibilityConverter}}" />
                </Grid>
            </Border>
        </StackPanel>-->

        <!--  JSON  -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,14,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryText}"
                Text="Body" />

            <Border
                Grid.Row="1"
                BorderBrush="{StaticResource Border}"
                BorderThickness="1"
                CornerRadius="4">

                <avalonEdit:TextEditor
                    Name="JsonTextBox"
                    Background="{StaticResource InputBackground}"
                    FontSize="14"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="false"
                    ShowLineNumbers="True"
                    SyntaxHighlighting="Json"
                    VerticalScrollBarVisibility="Visible" />
            </Border>
        </Grid>

        <!--  Status Message  -->
        <TextBlock
            x:Name="MessageTextBlock"
            Grid.Row="3"
            Margin="0,10,0,0"
            HorizontalAlignment="Center"
            FontSize="14"
            FontWeight="Bold"
            Text=""
            TextAlignment="Center" />

        <!--  Action Buttons  -->
        <StackPanel Grid.Row="4" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,6"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Foreground="{StaticResource PrimaryText}"
                Text="Actions" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button
                    Grid.Column="0"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Get"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="{StaticResource ButtonBackground}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="{StaticResource GetButton}"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="{StaticResource GetButton}" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="1"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Post"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="{StaticResource ButtonBackground}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="{StaticResource PostButton}"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="{StaticResource PostButton}" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="2"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Patch"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="{StaticResource ButtonBackground}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="{StaticResource PatchButton}"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="{StaticResource PatchButton}" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="3"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="Put"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="{StaticResource ButtonBackground}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="{StaticResource PutButton}"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="{StaticResource PutButton}" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="4"
                    Height="32"
                    Content="Delete"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="outer"
                                Background="{StaticResource ButtonBackground}"
                                BorderBrush="{StaticResource Border}"
                                BorderThickness="1"
                                CornerRadius="4">
                                <Grid x:Name="innerArea" Background="Transparent">
                                    <Border
                                        x:Name="leftStripe"
                                        Height="1"
                                        VerticalAlignment="bottom"
                                        Background="{StaticResource DeleteButton}"
                                        CornerRadius="0,0,0,4" />
                                    <ContentPresenter
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        RecognizesAccessKey="True"
                                        TextElement.Foreground="{TemplateBinding Foreground}" />
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter TargetName="outer" Property="Background" Value="{StaticResource DeleteButton}" />
                                    <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>

        <!--  Bottom Buttons  -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="4" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="SubmitButton"
                Grid.Column="0"
                Height="42"
                Click="SubmitButton_Click"
                Content="Send"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outer"
                            Background="{StaticResource ButtonBackground}"
                            BorderBrush="{StaticResource Border}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="{StaticResource SendButton}" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button
                x:Name="ClearButton"
                Grid.Column="2"
                Height="42"
                Click="ClearButton_Click"
                Content="Clear"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="outer"
                            Background="{StaticResource ButtonBackground}"
                            BorderBrush="{StaticResource Border}"
                            BorderThickness="1"
                            CornerRadius="4">
                            <Grid x:Name="innerArea" Background="Transparent">
                                <ContentPresenter
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    RecognizesAccessKey="True"
                                    TextElement.Foreground="{TemplateBinding Foreground}" />
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger SourceName="innerArea" Property="IsMouseOver" Value="True">
                                <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="outer" Property="Background" Value="{StaticResource ClearButton}" />
                                <Setter TargetName="outer" Property="BorderBrush" Value="{StaticResource BorderHover}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
