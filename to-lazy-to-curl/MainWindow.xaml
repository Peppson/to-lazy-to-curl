<Window
    x:Class="to_lazy_to_curl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Lazy to Curl"
    Width="620"
    Height="760"
    MinWidth="420"
    MinHeight="480"
    FontFamily="Consolas"
    Icon="pack://application:,,,/Assets/kalv2.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="NoHoverFocusTextBoxStyle" TargetType="TextBox">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="Black" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="3"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White" />
        </Style>
    </Window.Resources>

    <Grid Margin="24,10,24,24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  URL  -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="URL" />

            <TextBox
                x:Name="UrlTextBox"
                Height="34"
                Margin="0,0,0,10"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Background="#e5e9f0"
                FontSize="15"
                Style="{StaticResource NoHoverFocusTextBoxStyle}"
                TextAlignment="Center"
                TextChanged="TextBox_TextChanged"
                TextWrapping="NoWrap" />
        </StackPanel>

        <!--  JSON  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,4,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="JSON" />

            <avalonEdit:TextEditor
                Name="JsonTextBox"
                Grid.Row="1"
                FontFamily="Consolas"
                FontSize="14"
                HorizontalScrollBarVisibility="Auto"
                IsReadOnly="false"
                ShowLineNumbers="True"
                SyntaxHighlighting="Json"
                VerticalScrollBarVisibility="Visible" />
        </Grid>

        <!--  Message  -->
        <TextBlock
            x:Name="MessageTextBlock"
            Grid.Row="2"
            Margin="0,10,0,20"
            HorizontalAlignment="Center"
            FontSize="14"
            FontWeight="Bold"
            Text="fdsfs dsdfsd fsdf sdfsdf sdfds fsdf sd"
            TextAlignment="Center" />

        <!--  Buttons  -->
        <StackPanel Grid.Row="3" Orientation="Vertical">

            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="16"
                FontWeight="Bold"
                Text="Method" />

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>




                <Button
                    Grid.Column="0"
                    Height="32"
                    Margin="0,0,4,0"
                    Content="GET"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Grid>
                                <!--  Left stripe  -->
                                <Border
                                    Width="8"
                                    HorizontalAlignment="Left"
                                    Background="Red">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>

                                <!--  Main button  -->
                                <Border
                                    x:Name="border"
                                    Background="#4c566a"
                                    BorderBrush="Black"
                                    BorderThickness="1" />
                            </Grid>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#60affe" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#60affe" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    <Setter Property="Foreground" Value="white" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>








                <Button
                    Grid.Column="1"
                    Height="32"
                    Margin="4,0"
                    Content="POST"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#49cc90" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#49cc90" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    <Setter Property="Foreground" Value="white" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="2"
                    Height="32"
                    Margin="4,0"
                    Content="PATCH"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#50e3c1" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#50e3c1" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    <Setter Property="Foreground" Value="white" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="3"
                    Height="32"
                    Margin="4,0"
                    Content="PUT"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#fca131" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#fca131" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    <Setter Property="Foreground" Value="white" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
                    Grid.Column="4"
                    Height="32"
                    Margin="4,0,0,0"
                    Content="DELETE"
                    Cursor="Hand"
                    FontWeight="Bold">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="border"
                                Background="#4c566a"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#f93f3e" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="true">
                                    <Setter TargetName="border" Property="Background" Value="#f93f3e" />
                                    <Setter TargetName="border" Property="BorderBrush" Value="Gray" />
                                    <Setter Property="Foreground" Value="white" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </StackPanel>


        <Grid Grid.Row="4" Margin="0,14,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!--  POST  -->
            <Button
                x:Name="SubmitButton"
                Grid.Column="0"
                Height="42"
                Click="SubmitButton_Click"
                Content="Submit"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="#4c566a"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b4252" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <!--  RESET  -->
            <Button
                x:Name="ClearButton"
                Grid.Column="2"
                Height="42"
                Click="ClearButton_Click"
                Content="Reset"
                Cursor="Hand"
                FontSize="14"
                FontWeight="Bold">
                <Button.Template>

                    <ControlTemplate TargetType="Button">
                        <Border
                            x:Name="border"
                            Background="#4c566a"
                            BorderBrush="Black"
                            BorderThickness="1"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3b4252" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>




        <!--  Background="#FFDDDDDD"  -->






    </Grid>
</Window>
