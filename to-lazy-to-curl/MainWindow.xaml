<Window
    x:Class="to_lazy_to_curl.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:to_lazy_to_curl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="To Lazy to Curl"
    Width="700"
    Height="650"
    MinWidth="380"
    MinHeight="380"
    Icon="pack://application:,,,/Assets/kalv2.ico"
    mc:Ignorable="d">

    <Window.Resources>
        <Style x:Key="NoHoverFocusTextBoxStyle" TargetType="TextBox">
            <Setter Property="OverridesDefaultStyle" Value="True" />
            <Setter Property="SnapsToDevicePixels" Value="True" />
            <Setter Property="Background" Value="White" />
            <Setter Property="BorderBrush" Value="LightGray" />
            <Setter Property="Padding" Value="2" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border
                            x:Name="Bd"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="20,10,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  URL  -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <TextBlock
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontSize="14"
                FontWeight="Bold"
                Text="URL" />

            <TextBox
                x:Name="UrlTextBox"
                Height="30"
                Margin="0,0,0,10"
                FontSize="15"
                ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                Style="{StaticResource NoHoverFocusTextBoxStyle}"
                TextChanged="TextBox_TextChanged"
                TextWrapping="NoWrap" />
        </StackPanel>

        <!--  JSON  -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,5"
                VerticalAlignment="Center"
                FontWeight="Bold"
                Text="JSON" />

            <TextBox
                x:Name="JsonTextBox"
                Grid.Row="1"
                AcceptsReturn="True"
                BorderThickness="1"
                FontSize="15"
                HorizontalScrollBarVisibility="Auto"
                Style="{StaticResource NoHoverFocusTextBoxStyle}"
                TextChanged="TextBox_TextChanged"
                VerticalScrollBarVisibility="Auto" />
        </Grid>

        <!--  Button  -->
        <Grid Grid.Row="2" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Button
                Grid.Column="1"
                Height="42"
                Click="Button_Click"
                Content="POST!" />
        </Grid>
    </Grid>


</Window>
