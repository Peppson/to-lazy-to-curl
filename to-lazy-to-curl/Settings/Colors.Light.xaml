<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Light Them  -->
    <SolidColorBrush x:Key="WindowBackground" Color="#FDFDFD" />
    <SolidColorBrush x:Key="WindowBorder" Color="#b3b3b3" />
    <SolidColorBrush x:Key="CardBackground" Color="#FAFAFA" />
    <SolidColorBrush x:Key="ButtonTabsBackground" Color="#ffffff" />
    <SolidColorBrush x:Key="UrlInputBackground" Color="#ffffff" />
    <SolidColorBrush x:Key="EditorsBackground" Color="#ffffff" />
    <SolidColorBrush x:Key="HttpButtonBackground" Color="#ffffff" />
    <SolidColorBrush x:Key="BigButtonBackground" Color="#ffffff" />

    <SolidColorBrush x:Key="Icons" Color="#333333" />
    <SolidColorBrush x:Key="IconBackground" Color="Black" />

    <SolidColorBrush x:Key="TitleBarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="TitleBarButtonHover" Color="#E1E1E1" />
    <SolidColorBrush x:Key="TitleBarButtonCloseHover" Color="#e81123" />

    <SolidColorBrush x:Key="Border" Color="#b3b3b3" />
    <SolidColorBrush x:Key="BorderHover" Color="#737373" />
    <SolidColorBrush x:Key="EditorBorder" Color="Transparent" />
    <SolidColorBrush x:Key="ThemeToggle" Color="#525252" />

    <SolidColorBrush x:Key="PrimaryText" Color="#333333" />
    <Color x:Key="PrimaryTextColor">#333333</Color>
    <Color x:Key="PrimaryTextInverseColor">#333333</Color>
    <SolidColorBrush x:Key="PlaceHolderText" Color="#999999" />

    <!--  Editor Scrollbar  -->
    <SolidColorBrush x:Key="ScrollbarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollbarForeground" Color="#8A8A8A " />
    <SolidColorBrush x:Key="ScrollbarHover" Color="#757575" />

    <!--  Buttons  -->
    <SolidColorBrush x:Key="GetButton" Color="#60affe" />
    <SolidColorBrush x:Key="PostButton" Color="#87e37d" />
    <SolidColorBrush x:Key="PatchButton" Color="#50e3c1" />
    <SolidColorBrush x:Key="PutButton" Color="#fca131" />
    <SolidColorBrush x:Key="DeleteButton" Color="#E95378" />
    <SolidColorBrush x:Key="SendButton" Color="#60affe" />
    <SolidColorBrush x:Key="ClearButton" Color="#60affe" />

    <!--  Editor Syntax  -->
    <SolidColorBrush x:Key="EditorCaretColor" Color="Black" />
    <SolidColorBrush x:Key="String" Color="#088408" />
    <SolidColorBrush x:Key="FieldName" Color="#8b008b" />
    <SolidColorBrush x:Key="Bool" Color="#0000ff" />
    <SolidColorBrush x:Key="Number" Color="#ff3939" />
    <SolidColorBrush x:Key="Null" Color="#0000ff" />
    <SolidColorBrush x:Key="Punctuation" Color="#333333" />

    <!--  Misc  -->
    <SolidColorBrush x:Key="Success" Color="Green" />
    <SolidColorBrush x:Key="Failure" Color="Red" />
    <SolidColorBrush x:Key="Test" Color="Red" />
</ResourceDictionary>
