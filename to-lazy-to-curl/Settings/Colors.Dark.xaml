<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--  Dark Theme  -->
    <SolidColorBrush x:Key="WindowBackground" Color="#272727" />
    <SolidColorBrush x:Key="WindowBorder" Color="Transparent" />
    <SolidColorBrush x:Key="CardBackground" Color="#323232" />
    <SolidColorBrush x:Key="InputBackground" Color="#434343" />
    <SolidColorBrush x:Key="BigButtonBackground" Color="#3C3C3C" />
    <SolidColorBrush x:Key="HttpButtonBackground" Color="#3C3C3C" />

    <SolidColorBrush x:Key="TitleBarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="TitleBarButtonHover" Color="#434343" />
    <SolidColorBrush x:Key="TitleBarButtonCloseHover" Color="#e81123" />

    <SolidColorBrush x:Key="Border" Color="#434343" />
    <SolidColorBrush x:Key="BorderHover" Color="#535557" />

    <SolidColorBrush x:Key="PrimaryText" Color="#f7fbfe" />
    <Color x:Key="PrimaryTextColor">#f7fbfe</Color>
    <Color x:Key="PrimaryTextInverseColor">#333333</Color>
    <SolidColorBrush x:Key="PlaceHolderText" Color="#999999" />

    <!--  Editor Scrollbar  -->
    <SolidColorBrush x:Key="ScrollbarBackground" Color="Transparent" />
    <SolidColorBrush x:Key="ScrollbarForeground" Color="#434343" />
    <SolidColorBrush x:Key="ScrollbarHover" Color="#535557" />

    <!--  Editor Syntax  -->
    <SolidColorBrush x:Key="EditorCaretColor" Color="White" />
    <SolidColorBrush x:Key="String" Color="#98c379" />
    <SolidColorBrush x:Key="FieldName" Color="#e06c75" />
    <SolidColorBrush x:Key="Bool" Color="#56b6c2" />
    <SolidColorBrush x:Key="Number" Color="#e78f84" />
    <SolidColorBrush x:Key="Null" Color="#56b6c2" />
    <SolidColorBrush x:Key="Punctuation" Color="#bfc7d5" />

    <!--  Http Buttons  -->
    <SolidColorBrush x:Key="GetButton" Color="#60affe" />
    <SolidColorBrush x:Key="PostButton" Color="#87e37d" />
    <SolidColorBrush x:Key="PatchButton" Color="#50e3c1" />
    <SolidColorBrush x:Key="PutButton" Color="#fca131" />
    <SolidColorBrush x:Key="DeleteButton" Color="#E95378" />
    <SolidColorBrush x:Key="SendButton" Color="#60affe" />
    <SolidColorBrush x:Key="ClearButton" Color="#60affe" />

    <!--  Misc  -->
    <SolidColorBrush x:Key="Success" Color="#87e37d" />
    <SolidColorBrush x:Key="Failure" Color="#E95378" />
    <SolidColorBrush x:Key="Test" Color="#E95378" />
</ResourceDictionary>




